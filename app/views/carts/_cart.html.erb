
<div class='cart_title'>
  My Cart
</div>
<table>
  <%= render(cart.line_items) %>
  <tr class="total_line">
    <td colspan="2">Total</td>
    <td class="total_cell"><%= number_to_currency(cart.total_price)%></td>
  </tr>
</table>
<%= button_to 'Empty cart', @cart, method: :delete, :confirm => 'Are you sure you want to delete everything in your cart?' %>

<%= button_to 'Back to catalog', store_url, method: :get %>
